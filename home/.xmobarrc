Config { font = "xft:Inconsolata:size=12,xft:Monospace"
    , bgColor = "#002b36"
    , fgColor = "#a8a8a8"
    , position = Top
    , lowerOnStart = True
    , pickBroadest = True
--	, hideOnStart = True
    , sepChar = "%"
    , alignSep = "}{"
--    , template = "%StdinReader% }{ %mpd% | %mail% %battery% %multicpu% %memory% %disku% | %wlan0%%eth0% | %date% "
--    , template = "%StdinReader% }{ %mpd% | %battery% %multicpu% %memory% %disku% | %enp4s0% | %date% "
    , template = "%StdinReader% }{ %battery% %multicpu% %memory% %disku% | %enp4s0%%wlp3s0% | %date% "
    , commands = [ Run Network "enp4s0" ["-t", "<fc=#556B2F><rx> ↓</fc> <fc=#B22222><tx> ↑</fc>","-S","True"] 10
                 , Run Network "wlp3s0" ["-t", "<fc=#556B2F><rx> ↓</fc> <fc=#B22222><tx> ↑</fc>","-S","True"] 10
                 , Run MultiCpu ["-t", "C: <total>%", "-H","50","--high","#B22222"] 10
                 , Run Memory ["-t","M: <usedratio>%","-H","80","--high","#B22222"] 10
                 , Run DiskU [("/", "D:<usedp>%"), ("sda1", "<usedbar>")] ["-L", "20", "-H", "50", "-m", "1", "-p", "3"] 20
                 , Run Date "<fc=#ffffff>%a %m/%d %I:%M %P</fc>" "date" 10
--                 , Run MPD ["-t", "<artist> - <fc=#ffffff><title></fc> (<album>) <statei>", "--", "-P", ">>", "-Z", "=", "-S", "><"] 10
                 , Run Mail [("E: ", "~/.mail/INBOX")] "mail"
                 , Run BatteryP ["BAT1"] ["-t", "B: <left>%", "-L", "10", "-H", "80", "-p", "3", "--", "-O", "<fc=green>On</fc> - ", "-o", "", "-L", "-15", "-H", "-5", "-l", "red", "-m", "blue", "-h", "green"] 600
                 , Run StdinReader
                 ]
}

